<%args>
$schema
$table_from
$table_to
$column_from
$fk_id
</%args>

<%init>
use Alzabo::Config;

my ($s, $t);
eval
{
    $s = Alzabo::Create::Schema->load_from_file( name => $schema );

    $t = $s->table($table_from);
    foreach my $fk ( $t->foreign_keys( table => $s->table($table_to),
				       column => $t->column($column_from) ) )
    {
	$t->delete_foreign_key($fk) if  $fk->id eq $fk_id;
    }

    $s->save_to_file;
};

$m->comp( '../common/exception', $@ ) if $@;

$m->comp( '../common/redirect', url => 'view_table' . Alzabo::Config::mason_extension() . '?schema=' . $s->name . '&table=' . $t->name );
</%init>

<%flags>
inherit => undef
</%flags>
