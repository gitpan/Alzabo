<pre>
<% join "\n\n", map {"$_;"} @sql %>
</pre>

<form action="execute_sql<% Alzabo::Config::mason_extension() %>" method="post">
<input type="hidden" name="schema" value="<% $s->name %>">
Username: <input type="text" name="user"><br>
Password: <input type="password" name="password"><br>
<input type="submit" value="Execute SQL">

<%args>
$s
</%args>

<%init>

my @sql;
eval
{
    @sql = $s->make_sql;
};

$m->comp( &Alzabo::Config::mason_url_path . '/common/exception', $@ ) if $@;

</%init>
