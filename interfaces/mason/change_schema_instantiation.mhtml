<%args>
$schema
$instantiated
</%args>
<%init>
my $s;
eval
{
    $s = Alzabo::Create::Schema->load_from_file( name => $schema );

    $s->set_instantiated($instantiated);
    $s->save_to_file;
};

$m->comp( '../common/exception', $@ ) if $@;

$m->comp( '../common/redirect', url => 'view_schema' . Alzabo::Config::mason_extension() . '?schema=' . $s->name );
</%init>
<%flags>
inherit => 'syshandler'
</%flags>
