% if (@s) {
<form action="browse_schema<% Alzabo::Config::mason_extension() %>">
<table width="70%" cellspacing="5">
 <tr>
  <td>
   <b>Choose a schema:</b>
  </td>
  <td>
   <select name="schema">
%   foreach my $s (sort @s) {
    <option value="<% $s %>"><% $s %></option>
%   }
   </select>
  </td>
 </tr>
 <tr>
  <td>
   User:
  </td>
  <td>
   <input type="text" name="user" size="20">
  </td>
 </tr>
 <tr>
  <td>
   Password:
  </td>
  <td>
   <input type="password" name="password" size="20">
  </td>
 </tr>
 <tr>
  <td colspan="2">
   <input type="submit" value="Submit">
  </td>
 </tr>
</table>
</form>
% }

<%init>
use Alzabo::Config;

my @s = Alzabo::Config::available_schemas;
</%init>
