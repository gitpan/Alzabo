<input type="checkbox" name="<% $col_name %>" value="1" <% $true ? 'checked="checked"' : '' %> class="<% $class %>">\
<%args>
$row => undef
$column
$class => $m->base_comp->attr_if_exists('checkbox_class_default')
</%args>
<%init>
my $true;

my $col_name = ref $column ? $column->name : $column;

if (defined $row)
{
    $true = $row->select( $col_name );
}
else
{
    $true = $column->default;
}
</%init>
